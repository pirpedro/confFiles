#!/bin/bash

is_mac(){ [ "$OSTYPE" == "darwin"* ] }

is_linux(){ [ "$OSTYPE" == "linux-gnu" ] }

echo "This script will install git..."

if is_linux; then
  sudo apt-get install git git-core
fi

sudo mkdir -p /usr/local/bin
cd /usr/local
sudo git clone git://github.com/pirpedro/my-config.git
cd my-config
sudo ln -s bin/my /usr/local/bin/my

mkdir -p packages-enabled

if is_mac; then
  sudo ln -s mac-packages-available packages-available
else
  sudo ln -s ubuntu-packages-available packages-available
fi
